<div class="container">
  <div class="jumbotron">
    <!--p id="notice"><%= notice %></p-->
    
    <% if administrador_signed_in? || coordinador_signed_in? %>
      <h2>Lista de Alumnos</h2>
      <br>

        <div class="row">
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Rut</strong>
          </span>
        </div>
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Nombre</strong>
          </span>
        </div>
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Apellido</strong>
          </span>
        </div>
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Email</strong>
          </span>
        </div>
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Telefono</strong>
          </span>
        </div>
        <div class="col-md-2">
          <span style="font-size:14px">
            <strong>Memoria</strong>
          </span>
        </div>
      </div>
      <hr>
      <% @alumnos.each do |alumno| %>
        <div class="row">
          <div class="col-md-2">
            <span style="font-size:14px">
              <%= alumno.rut %>
            </span>
          </div>
          <div class="col-md-2">
            <span style="font-size:14px">
              <%= alumno.nombre %>
            </span>
          </div>
          <div class="col-md-2">
            <span style="font-size:14px">
              <%= alumno.apellido %>
            </span>
          </div>
          <div class="col-md-2">
            <span style="font-size:14px">
              <%= alumno.email %>
            </span>
          </div>
          <div class="col-md-2">
            <span style="font-size:14px">
              <%= alumno.telefono %>
            </span>
          </div>
          <div class="col-md-2">
            <span style="font-size:14px">
              <% @mems.each do |mem| %>
                <% mem.alumnos.each do |alum| %>
                  <% if alum.id == alumno.id %>
                    <%= link_to mem.titulo, mem %><br>
                  <% end %>
                <% end %>
              <% end %>
            </span>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>
    <br>
    <div>
      <a href="<%= new_alumno_registration_path %>" class="btn btn-default btn-xs">Registrar Nuevo Alumno</a>
    </div>
  </div>
</div>
