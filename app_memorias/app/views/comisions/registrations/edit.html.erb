<div class="container">
  <div class="jumbotron">

    <h2>Editar Usuario Comisión Docente</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", style:"width: 35%" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <!--div class="row">
        <div class="col-md-5">
          <div class="field">
            <%= f.label :nombre %><br />
            <%= f.text_field :nombre, autofocus: true, class: "form-control", style:"width: 87.5%" %>
          </div>
        </div>
        <div>
          <div class="field">
            <%= f.label :apellido %><br />
            <%= f.text_field :apellido, autofocus: true, class: "form-control", style:"width: 35%" %>
          </div>
        </div>
      </div-->

      <!--div class="row">
        <div class="col-md-5">
          <div class="field">
            <%= f.label :rut %><br />
            <%= f.text_field :rut, autofocus: true, class: "form-control", style:"width: 87.5%", :maxlength => 14 %>
          </div>
        </div-->
        <div>
          <div class="field">
            <%= f.label :telefono %><br />
            <%= f.number_field :telefono, autofocus: true, class: "form-control", style:"width: 35%" %>
          </div>
        </div>
      <!--/div-->

      <div class="field">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Deje este espacio vacio si no quiere cambiarla.", class: "form-control", style:"width: 35%" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style:"width: 35%" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "off", placeholder:"Ingrese su password actual para confirmar cambios.", class: "form-control", style:"width: 35%" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Editar", class:"btn btn-primary active" %>
      </div>
    <% end %>
    
    <!--h3>Cancel my account</h3>
    
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p-->
    
    <%= link_to "Atrás", :back %>
  </div>
</div>